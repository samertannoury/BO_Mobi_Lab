<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/date.js"></script>
    <link href="~/Content/Menu.css" rel="stylesheet" />
    <link href="~/Content/SubMenu.css" rel="stylesheet" />
    <link href="~/Content/Content.css" rel="stylesheet" />
    <script src="~/Scripts/Angular1.4.0.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <script src="~/Scripts/Jquery2.1.4.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-dialog.js"></script>
    <link href="~/Content/bootstrap-dialog.css" rel="stylesheet" />
    <script src="~/Scripts/Notification.js"></script>
    <script src="~/Scripts/web-notification.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/popper.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link href="~/Content/bootstrap-glyphicon.css" rel="stylesheet" />
    <link href="~/Content/DatePickercss.css" rel="stylesheet" />
    <link href="~/Content/daterangepicker.css" rel="stylesheet" />
    <script src="~/Scripts/ngDialog.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" HR Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Back Office Users", "BOUers", "Home")</li>
                    <li>@Html.ActionLink("Department", "Department", "Department")</li>
                    <li>@Html.ActionLink("Employee", "Employee", "Employee")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angulr-js")
    @RenderSection("scripts", required: false)


   
</body>
</html>
